/*
 *= require reset
 *= require grid
 *= require fonts
 *= require helpers
 *= require_self
*/

body { background:#f8f8f8 url(<%=asset_data_uri 'bg.png' %>) left top repeat; text-align:center; font-size:0.625em; font-family:'Helvetica Neue', Helvetica, sans-serif; color:#686b6d; line-height:1.5em; font-weight:100; }
header { height:206px; background:transparent url(<%=asset_data_uri 'bg-stripe.png' %>) left bottom repeat-x; }

@mixin display-font { font-family:Arial, sans-serif; letter-spacing:-0.13em; }
@mixin shadow($x, $y, $blur, $color) { -moz-box-shadow:$x $y $blur $color; -webkit-box-shadow:$x $y $blur $color; box-shadow:$x $y $blur $color; }

#sq { display:block; margin-top:38px; width:320px; height:90px; background:transparent url(<%=asset_data_uri 'innovation-square.png' %>) left top repeat; position:relative; left:-8px; }

h1, h2, h3, h4, h5, h6 { @include display-font; }
  h1 { font-size:36px; text-align:center; }
  h2 { font-size:22px; }

ul.clean, ul.clean li { list-style:none; padding:0; margin:0; }

dl { font-size:15px; }
  dt { font-weight:500; text-transform:uppercase; }