 *= require interface
*/

body { background:#f8f8f8 url(<%=asset_data_uri 'bg.png' %>) left top repeat; text-align:center; font-size:0.625em; font-family:'OpenSansRegular', Arial, sans-serif; color:#686b6d; line-height:1.5em; font-weight:100; }

@mixin display-font { font-family:'OpenSansLight', Arial, sans-serif; }
@mixin shadow($x, $y, $blur, $color) { -moz-box-shadow:$x $y $blur $color; -webkit-box-shadow:$x $y $blur $color; box-shadow:$x $y $blur $color; }


h1, h2, h3, h4, h5, h6 {
  @include display-font; color:#454748; line-height:1.5em; font-weight:normal;
  a { color:#454748; }
}
  h1 { font-size:36px; }
  h2 { font-size:22px; line-height:24px; margin-bottom:10px; }
  h3, h4 { font-size:16px; }

ul.clean, ul.clean li { list-style:none; padding:0; margin:0; }

dl {  }
  dt { font-weight:normal; }

a { color:#417da7; }
  a:link, a:active { text-decoration:none; }
  a:hover, a:visited { text-decoration:underline; }

p { font-size:12px; }

strong { font-family:'OpenSansSemibold'; }

label { text-align:left; }
input {
  border:1px solid #fff; height:20px; line-height:20px; padding:4px; font-size:12px; font-family:'OpenSansRegular', Arial, sans-serif; margin:0; color:#a9aaaa;
  &:focus { border:1px solid #cdcccb; outline:none; }
}
button, .button, .simple-button { border:0; display:block; background:#4182b0; color:#fff; line-height:30px; padding:0 10px; text-align:center; height:30px; font-family:'OpenSansBold', Arial; font-size:11px; text-transform:uppercase; }


/* LAYOUT */
.container_12 { text-align:left; }

#header {
  height:124px; background:transparent url(<%=asset_data_uri 'bg-stripe-thin.png' %>) left bottom repeat-x; margin-bottom:20px; overflow:hidden;
  .container_12 { position:relative; }

  nav {
    text-align:right; line-height:86px;
    a { color:#454748; font-size:16px; font-family:'OpenSansLight'; text-transform:uppercase; padding:0 6px; }
  }
}
#sq { display:block; margin-top:20px; width:270px; height:46px; background:transparent url(<%=asset_data_uri 'innovation-square-header.png' %>) left top repeat; }

#companyHeader {
  margin:20px 0 40px 0; height:102px;
  .img { width:100px; height:100px; border:1px solid #cccccb; background:#fff; float:left; margin-right:20px; }
  .h { margin-left:120px; }
  .button { float:left; }
  .stat {
    font-size:12px; float:left; line-height:44px; padding:0 12px;
  }
}

nav.interior {
  border-top:1px solid #e8e8e8; height:32px;
  a {
    color:#454748; float:left; display:block; text-transform:uppercase; font-size:12px; font-family:'OpenSansSemibold'; height:32px; line-height:32px; padding:0 12px;
    &.selected { background:#e2e2e2 url(<%=asset_data_uri 'nav-interior-bg.png' %>) left top no-repeat; }
    &.nav-stream {
      span { display:block; width:15px; height:15px; float:left; margin:8px 8px 0 0; background:transparent url(<%=asset_data_uri 'isotope.png' %>) left top no-repeat; }
    }
  }
}

.isotopes {
  min-height:300px; background:transparent url(<%=asset_data_uri 'isotopes.png' %>) 12px top repeat-y;
  
  .isotope {
    position:relative; padding:20px 0;
    .profile-photo { position:absolute; left:-24px; top:28px }
    .dot { display:block; width:15px; height:15px; position:absolute; left:12px; top:33px; background:transparent url(<%=asset_data_uri 'isotope.png' %>) left top no-repeat; }
    .body {
      font-size:12px; color:#666; margin-left:40px; border:1px solid #e8e8e8; background:#fff; position:relative; padding:12px 10px;
      .pointer { width:14px; height:19px; position:absolute; top:10px; left:-14px; background:transparent url(<%=asset_data_uri 'isotope-pointer.png' %>) left top repeat-y; }
      
    }
  }
}

.links {
  margin:10px 0;
  a { font-size:12px; padding-right:8px; }
}

.people-groups {
  margin:10px 0;
  h3 { height:32px; line-height:32px; font-size:12px; text-transform:uppercase; font-family:'OpenSansSemibold'; padding-left:10px; background:#e2e2e1 url(<%=asset_data_uri 'bg-grey.png' %>) left top repeat; }
  ul li {
    padding:10px; font-size:12px;
    img { float:left; }
    a, span { display:block; margin-left:46px; line-height:12px; padding-top:4px; }
  }
}

#pitchDeck, #doc { margin:40px 0; }

ul.docs {
  margin:40px 0;
  li {
    width:220px; margin:0 13px 20px 0; float:left;
    h3 {
      line-height:18px; margin:8px 0;
      a { color:#454748; }
    }
    .thumbnail {
      display:block; width:218px; height:218px; overflow:hidden; border:1px solid #cccccb; text-align:center; background:#fff;
      img { margin:0 auto; }
    }
    .creator {
      float:right; margin:6px 4px 0 0;
    }
    .actions {
      a { text-transform:uppercase; color:#454748; font-family:'OpenSansBold'; padding-right:30px; }
    }
  }
}

