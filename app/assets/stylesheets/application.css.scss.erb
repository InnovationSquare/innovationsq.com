/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require reset
 *= require fonts
 *= require_self
*/

body { background:#dadada url('/assets/layout/hashes-top.png') left 160px repeat-x; text-align:center; font-size:0.625em; font-family:'Helvetica Neue', Helvetica, sans-serif; color:#686b6d; line-height:1.5em; font-weight:100; }
header { height:160px; background:#c3c8cc; }
  header .frame { background:transparent url('/assets/identity/brick-and-local.png') left bottom no-repeat; height:160px; }

.frame { width:930px; margin:0 auto; text-align:left; }

@mixin display-font { font-family:QuicksandLight, Arial, sans-serif; letter-spacing:-0.13em; }
@mixin shadow($x, $y, $blur, $color) { -moz-box-shadow:$x $y $blur $color; -webkit-box-shadow:$x $y $blur $color; box-shadow:$x $y $blur $color; }

h1, h2, h3, h4, h5, h6 { @include display-font; }
  h1 { font-size:36px; text-align:center; }
  h2 { font-size:22px; }

ul, ul li { list-style:none; padding:0; margin:0; }

form {
  button { display:block; background:#9fa0a1; @include display-font; text-align:center; border:0; color:#fff; font-size:16px; min-height:30px; line-height:30px; padding:0 5px; cursor:pointer; }
}
label { @include display-font; font-size:16px; line-height:18px; display:block; }
input { border:0; padding:4px; border:3px solid #fff; color:#686b6d; line-height:16px; font-size:12px; @include shadow(2px, 2px, 0, #9fa0a1); }
  input:focus { outline:none; border:3px solid #e1e1e2; @include shadow(2px, 2px, 10px, #9fa0a1); }

.container { background:transparent url('/assets/layout/hashes-divider.png') left bottom repeat-x; padding-bottom:90px; min-height:300px; }
  .container.with-padding { padding-top:15px; padding-bottom:105px; }

footer { min-height:100px; background:#bdbdbd; }

#merchants-page {
  h1 { margin-top:37px; }
  #left { margin:50px 0 0 25px; }
  #right {
    width:298px; padding:15px 10px; float:right; background:#c3c4c4; margin-top:50px;
    label, input { width:278px; }
    label { margin-top:16px; }
    button { float:right; margin:14px 6px 0 0; }
  }
  dt { line-height:20px; }
  dd { margin-bottom:45px; }
}

dl { font-size:15px; }
  dt { font-weight:500; text-transform:uppercase; }