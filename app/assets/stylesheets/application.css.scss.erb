/*
 *= require reset
 *= require grid
 *= require fonts
 *= require helpers
 *= require_self
*/

body { background:#f8f8f8 url(<%=asset_data_uri 'bg.png' %>) left top repeat; text-align:center; font-size:0.625em; font-family:'OpenSansRegular', Arial, sans-serif; color:#686b6d; line-height:1.5em; font-weight:100; }

@mixin display-font { font-family:'OpenSansLight', Arial, sans-serif; }
@mixin shadow($x, $y, $blur, $color) { -moz-box-shadow:$x $y $blur $color; -webkit-box-shadow:$x $y $blur $color; box-shadow:$x $y $blur $color; }


h1, h2, h3, h4, h5, h6 { @include display-font; color:#454748; line-height:1.5em; font-weight:normal; }
  h1 { font-size:36px; }
  h2 { font-size:22px; }
  h3, h4 { font-size:16px; }

ul.clean, ul.clean li { list-style:none; padding:0; margin:0; }

dl {  }
  dt { font-weight:normal; }

a { color:#417da7; }
  a:link, a:active { text-decoration:none; }
  a:hover, a:visited { text-decoration:underline; }

label { text-align:left; }
input {
  border:1px solid #fff; height:20px; line-height:20px; padding:4px; font-size:12px; font-family:'OpenSansRegular', Arial, sans-serif; margin:0; color:#a9aaaa;
  &:focus { border:1px solid #cdcccb; outline:none; }
}
button, .button { border:0; display:block; background:#4182b0; color:#fff; line-height:30px; padding:0 10px; text-align:center; height:30px; font-family:'OpenSansBold', Arial; font-size:11px; text-transform:uppercase; }


/* LAYOUT */
.container_12 { text-align:left; }

header {
  height:206px; background:transparent url(<%=asset_data_uri 'bg-stripe.png' %>) left bottom repeat-x; margin-bottom:32px;
  .container_12 { position:relative; }
}
#sq { display:block; margin-top:38px; width:320px; height:90px; background:transparent url(<%=asset_data_uri 'innovation-square.png' %>) left top repeat; position:relative; left:-8px; }

#tab {
  background:#716c6c; color:#fff; text-align:center; height:30px; line-height:30px;
  label { font-family:'OpenSansBold', Arial; font-size:11px; text-transform:uppercase; padding:0 5px; }
  a { color:#b4ddf0; font-size:12px; padding:0 5px; }
}

.email-signup {
  label { font-size:12px; color:#454748; font-family:'OpenSansBold', Arial; display:block; margin-bottom:4px; }
  input { float:left; }
  input.email { width:213px; position:relative; left:1px; }
}

#signup {
  position:absolute; right:20px; top:83px;
}
#footerSignup {
  margin-top:100px;
}

article { padding-bottom:100px; }

.pitch {
  margin-bottom:24px;
  h2 { margin-bottom:28px; }
  p { font-size:12px; line-height:18px; }
}

.who-is-involved {
  position:relative; height:309px; border:1px solid #e8e8e8; border-width:1px 0; background:transparent url(<%=asset_data_uri 'triangle.png' %>) 200px 32px no-repeat;
  label { font-family:'OpenSansBold', Arial, sans-serif; display:block; background:#dbe3e1; height:32px; line-height:32px; text-transform:uppercase; font-size:12px; color:#454748; text-align:center; float:left; padding:0 18px; }
  
  li { position:absolute; }
    h3 { font-family:'OpenSansBold', Arial, sans-serif; line-height:18px; }
    h4 { font-family:'OpenSansRegular', Arial, sans-serif; }
  
  li.companies { top:56px; left:495px; }
  li.organizations { top:200px; left:19px; }
  li.investors { top:203px; left:613px; }
  
  
}

.layer-1, .layer-2 {
  img { border:1px solid #696b6d; }
  dl { padding-top:14px; }
    dt { font-family:'OpenSansRegular', Arial, sans-serif; font-size:24px; line-height:32px; }
    dd { font-size:16px; margin-bottom:20px; }
  
}
.layer-1 { margin:25px auto 60px auto; }
